{
  "name": "fundamentals",
  "version": "1.0.0",
  "description": "Learn Playwright for automate testing",
  "main": "index.js",
  "scripts": {
    "p:run:chrome": "playwright test --config=playwright.config.ts --project=Chromium --reporter=html",
    "p:run:firefox": "playwright test --config=playwright.config.ts --project=Firefox",
    "p:run:webkit": "playwright test --config=playwright.config.ts --project=Webkit",
    "p:run:webkit:headed": "playwright test --config=playwright.config.ts --project=Webkit --headed",
    "p:report": "playwright show-report"
  },
  "keywords": [
    "playwright",
    "javascript"
  ],
  "author": "oimtrust",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.27.0",
    "prettier": "^2.7.1"
  }
}
